<%- include('./header'); %>
<%- include('./add'); %>


    <table class="table table-bordered">
    <thead>
    <tr>
    <th>Image</th>
    <th>Name</th>
    <th>Age</th>
    <th>Father Name</th>
    <th>Gender</th>
    <th>Action</th>
    </tr>
    </thead>
    <tbody>
        <% students.forEach(student => { %>
            <tr>
                <td style="width:100px;"><img src="/images/<%= student.image %>" alt="<%= student.name %>"></td>
                <td><%= student.name %></td>
                <td><%= student.age %></td>
                <td><%= student.father_name %></td>
                <td><%= student.gender %></td>
                <td>
                    <form method="POST" action="/students/<%= student._id %>?_method=DELETE">
                       <a href="/students/<%= student._id %>/edit" style="margin-left:10px;" class="btn btn-primary"><i class="fa fa-edit"></i>Edit</a>
                       <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i>Delete</button>
                    </form>
                </td>
                </tr>

        <% }) %>
    </tbody>
    </table>

<%- include('./footer'); %>
